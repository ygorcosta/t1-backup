{
  "kind": "StatefulSet",
  "id": "ci",
  "image": "liferaycloud/jenkins:2.222.1-4.0.0",
  "deploy": false,
  "memory": 8192,
  "cpu": 4,
  "scale": 1,
  "volumes": {
    "ciData": "/var/jenkins_home"
  },
  "loadBalancer": {
    "targetPort": 8080
  },
  "readinessProbe": {
    "httpGet": {
      "path": "/login",
      "port": 8080
    },
    "initialDelaySeconds": 60,
    "timeoutSeconds": 10,
    "failureThreshold": 12
  },
  "livenessProbe": {
    "httpGet": {
      "path": "/login",
      "port": 8080
    },
    "initialDelaySeconds": 300,
    "timeoutSeconds": 10,
    "failureThreshold": 12
  },
  "env": {
    "JENKINS_ADMIN_USER_NAME": "t1",
    "JENKINS_EMAIL_NOTIFICATIONS_FROM": "Jenkins CI - t1 <t1@liferay.com>",
    "JENKINS_URL": "https://ci-t1-infra.lfrcloud.dev",
    "LCP_CI_SCM_REPOSITORY_NAME": "t1",
    "LCP_CI_SCM_REPOSITORY_OWNER": "dxpcloud-dev"
  },
  "environments": {
    "infra": {
      "deploy": true
    }
  }
}